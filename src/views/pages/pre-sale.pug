extends ../layouts/base

block page_variables
  - var page_class = 'pre-sale';
  - var page_active = '/pre-sale/';

block append head
  block head_variables
    - var title = app.head.competition.title;
    - var description = app.head.competition.description;

block content
  .page-content-pattern

    .pre-sale-wrapper
      //- .patternsed
      //-   div.patterned
      //-     img.js-prevent-inline.triangle_1(src="/static/img/new-page/snall_bg.svg" alt="")
      //-     img.js-prevent-inline.triangle_4(src="/static/img/new-page/small_bg.svg" alt="")
      //-     img.js-prevent-inline.triangle_2(src="/static/img/new-page/small_bg2.svg" alt="")
      //-     img.js-prevent-inline.triangle_6(src="/static/img/new-page/big_bg.svg" alt="")
      //-     img.js-prevent-inline.triangle_5(src="/static/img/new-page/small_bg2.svg" alt="")
      //-     img.js-prevent-inline.triangle_3(src="/static/img/new-page/mid_bg2.svg" alt="")  

    .pre-sale
      .h1.title Pre-sale

      .dates
        .dates__left
          span.dates__bold Pre-sale Dates: 
          | 1.09 - 30.09.2018
        .dates__right
          span.dates__bold ICO Dates:
          | 1.11 - 30.11.2018

      .questions On all questions of cooperation and investments
        br
        | please address on 
        a(href="mailto:invest@membrana.io").colored invest@membrana.io

      img(src="/static/img/pictures/pre-sale/logo.png" alt="").logo

      .top_description
        .top_description__img
          img(src="/static/img/pictures/pre-sale/token.svg" alt="").token
          img(src="/static/img/pictures/pre-sale/corner.svg" alt="").corner
        .top_description__text
          span.capital MBN token 
          | is an utility token. It is used on the platform to unlock advanced features, use Membrana external API or to pay platform commission fees. Users can pay in other currencies or fiat, but paying with MBN tokens will be significantly cheaper.

      .documents_btns
        a(href='#').documents_btns__btn One Pager
        a(href='#').documents_btns__btn.colored Whitepaper
        a(href='#').documents_btns__btn Business Overview

      ul.list
        li 
          span.list__left 
            span.text_wr Softcap
          span.lift__right US 
            span.lift__right-colored $2M
        li 
          span.list__left 
            span.text_wr Hardcap
          span.lift__right US 
            span.lift__right-colored $7M
        li 
          span.list__left 
            span.text_wr Token amount
          span.lift__right
            span.lift__right-colored 1,000,000,000
        li 
          span.list__left 
            span.text_wr Crowdsale token price
          span.lift__right
            span.lift__right-colored $0,02

      .graph_block
        h2.graph_block__title Token distribution:
        .graph__desc_vert
          .graph__desc1
            .desc__title 40% 
              span.small_text Lock-up 1-6 month
            .bordered_block Tokens
              br
              | available
              br
              span.bold for Pre-sale
          .graph__desc2
            .desc__title 20% 
              span.small_text Not lock up
            .bordered_block.small Reserved
              br
              span.bold for Public Sale
        .js-pie-chart.pie-chart#pieChart
        .graph__desc_hor
          .desc__title Reserved for distribution to
          ul.percents_block
            li.percents_block__string 
              span.left__part
                span.left__part_text Private Sale Investors
              span.right__part 8,5% 
                span.non_colored Lock up to 6 month
            li.percents_block__string 
              span.left__part
                span.left__part_text Membrana Advisors and Partners
              span.right__part 10% 
                span.non_colored Lock up to 3 month
            li.percents_block__string 
              span.left__part
                span.left__part_text Membrana team
              span.right__part 17,5% 
                span.non_colored Lock up to 3 month
            li.percents_block__string 
              span.left__part
                span.left__part_text Community Events
              span.right__part 4%

      .discounts_block
        h2.discounts__title Presale discounts
        ul.discounts
          li.discount
            span.discounts__percents 5%
            span.discounts__money from 
              span.colored $10,000 
              br 
              | to 
              span.colored $50,000
          li.discount
            span.discounts__percents 10%
            span.discounts__money from 
              span.colored $50,001 
              br 
              | to 
              span.colored $100,000
          li.discount
            span.discounts__percents 15%
            span.discounts__money from 
              span.colored $100,001  
              br 
              | to 
              span.colored $500,000
          li.discount
            span.discounts__percents 25%
            span.discounts__money from 
              span.colored $500,001 

      span.no_disc *Public Sale 
        span.colored NOdiscount

      .lane_gr_cont
        h2.lane_gr_cont__title Distribution of funds collected
        .lane_gr_cont__wr
          .lane_gr_cont__btn_wr
            a(href="#" data-number="0").lane_gr_cont__btn Product Development 
              span.bold - 30%
            a(href="#" data-number="1").lane_gr_cont__btn Marketing 
              span.bold - 30%
            a(href="#" data-number="2").lane_gr_cont__btn Exchange listings 
              span.bold - 25%
            a(href="#" data-number="3").lane_gr_cont__btn Legal 
              span.bold - 10%
            a(href="#" data-number="4").lane_gr_cont__btn Customer Events 
              span.bold - 5%
          .lane_gr_cont__graph.lane_gr
            .lane_gr__item(data-number="0")
            .lane_gr__item(data-number="1")
            .lane_gr__item(data-number="2")
            .lane_gr__item(data-number="3")
            .lane_gr__item(data-number="4")

      .form_section
        h2.form_section__title 
          span.form_section__title_cont Interested in contributing?
        .document_links_wr
          a(href="#" target="blank").form_section__doc_link
            img(src="/static/img/pictures/pre-sale/document_icon_big.svg" alt="")
            span.link__text Deck.pdf
          a(href="#" target="blank").form_section__doc_link
            img(src="/static/img/pictures/pre-sale/document_icon_big.svg" alt="")
            span.link__text Idication of Interest.pdf
          a(href="#" target="blank").form_section__doc_link
            img(src="/static/img/pictures/pre-sale/document_icon_big.svg" alt="")
            span.link__text Summary.pdf
          a(href="#" target="blank").form_section__doc_link
            img(src="/static/img/pictures/pre-sale/document_icon_big.svg" alt="")
            span.link__text Terms & Conditions.pdf
        form.pre_sale_form
          .form_grp
            label(for="name").form__text Full 
              span.bold Name
            input(name="name" placeholder="Type Your Full Name Here...").text_input
          .form_grp
            label(for="mail").form__text Your 
              span.bold Email
            input(name="mail" placeholder="Type Your Email Here...").text_input
          .form_grp
            p.form__text Are you an accredited 
              span.bold investor:
            .form__inline
              label.form__check_label
                input(type="radio" name="accredited" id="accredited_yes" value="1" checked="checked").form__check_input 
                | Yes
            .form__inline
              label.form__check_label
                input(type="radio" name="accredited" id="accredited_no" value="0").form__check_input
                | No
          .form_grp
            p.form__text What type of entity do you 
              span.bold represent:
            .form__inline
              label.form__check_label
                input(type="radio" name="entity_type" id="individual" value="individual" checked="checked").form__check_input 
                | Individual
            .form__inline
              label.form__check_label
                input(type="radio" name="entity_type" id="syndicate" value="syndicate").form__check_input
                | Syndicate
            .form__inline
              label.form__check_label
                input(type="radio" name="entity_type" id="fund" value="fund").form__check_input
                | Professional Fund
          .form_grp
            label(for="sum").form__text Desired  
              span.bold Allocation:
            .input_grp
              input(name="sum" placeholder="25000...").text_input
              .input_grp__btn
                a.change_money USD
                .drpdwn_menu
                  .drpdwn_menu__item USD
                  .drpdwn_menu__item ETH
                  .drpdwn_menu__item BTC
          .form_grp
            label(for="citizenship").form__text.bold Citizenship :
            select(name="citizenship").citizenship.text_input
              option(value="EH") Western Sahara
              option(value="YE") Yemen
              option(value="ZM") Zambia
              option(value="ZW") Zimbabwe
          .form_grp
            label(for="name").form__text 
              span.bold ETH 
              | or 
              span.bold BTC 
              | address you plan to send from? 
              span.thin (optional):
            input(name="name" placeholder="Ox...").text_input
          .form_grp
            label(for="name").form__text 
              span.bold Anything else 
              | we should know? 
              span.thin (optional):
            input(name="name").text_input
          .form_grp
            p.form__text.bold Important notice:
            .form__inline
              label.form__check_label
                input(type="radio" name="entity_type" id="individual" value="individual").form__check_input 
                | I understand the presale will be subject to United States regulations and securities laws and that submitting this form is NOT a guarantee of allocation.
          button.form__btn Submit







  .pop_up-image.non_displayed
    .close_pop_up
    img(src="/static/img/new-page/climbing.svg" alt="")
    a(href='#').close_pop_up_cross
    //- .close_pop_up.close_pop_up_2



  .join-us-wrapper
    .join-us
      .join-us__subscribe-check
        .subscribe-check
          h2.subscribe-check__title!=app.join_us.title_check
          .subscribe-check__description!=app.join_us.subscription_check
          .subscribe-check__join-telegram
            a.subscribe-check__btn(href="https://t.me/membranaplatform" target="_blank")!=app.join_us.join
              .subscribe-check__telegram 
                .subscribe-check__telegram-icon
                  img(src="/static/img/icons/socials/telegram.svg" all="")
                | Telegram

          form.subscribe-check-form.js-subscribe-form
            input.subscribe-check-form__email.input(type="email" placeholder=app.join_us.email data-error=app.join_us.email_error required)
            button.subscribe-check-form__submit.subscribe-check__btn(type="submit")!=app.join_us.subscribe


  script(src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.16/d3.min.js")
