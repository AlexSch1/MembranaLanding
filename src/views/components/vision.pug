.vision-wrapper.js-section
  .patterns
    - 
      var path = "/static/img/patterns/vision/"
      var list = [
        "net.png",
        "line.svg",
        "triangle1.png",
        "triangle2.png",
        "triangle3.png",
        "triangle4.png",
        "triangle5.png",
        "triangle6.png"
      ]
    each pattern in list
      img.pattern(class=(pattern.split('.')[0]) src=path+pattern alt="")

  .vision
    h2.vision__title.title.h-text-gradient!=app.vision.title
    .vision__items
      each item in app.vision.items
        .vision-item
          .vision-item__icon
            img(src=item.icon alt="")
          .vision-item__content
            h4.vision-item__title!=item.title
            .vision-item__description!=item.description
